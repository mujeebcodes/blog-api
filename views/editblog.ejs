<%- include('partials/header'); -%>
<h3>Editing <strong><%= blog.title %></strong></h3>
<form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      required
      value="<%= blog.title %>"
    />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input
      type="text"
      class="form-control"
      id="description"
      name="description"
      value="<%= blog.description %>"
    />
  </div>
  <div class="mb-3">
    <label for="body" class="form-label">Body</label>
    <textarea class="form-control" name="body" id="body" cols="30" rows="5">
 <%= blog.body %></textarea
    >
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
  <a href="/blog/myblogs" class="btn btn-primary"> Back</a>
</form>
<%- include('partials/footer'); -%>
